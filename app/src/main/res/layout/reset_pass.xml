<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="20dp"
    android:background="?backgroundColor">

    <TextView
        android:id="@+id/tvResetPassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="7"
        android:fontFamily="@font/raleway"
        android:text="Recuperación de tu cuenta"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResetPassTitle"
        android:ems="14"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="15dp"
        android:text="Ingresa tu correo electrónico y te enviaremos un enlace para que recuperes el acceso a tu cuenta."
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstrucciones"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnCancelarPassReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMail"
        android:text="Cancelar"/>

    <Button
        android:id="@+id/btnAceptarPassReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMail"
        android:layout_toEndOf="@+id/btnCancelarPassReset"
        android:layout_marginStart="15dp"
        android:text="Aceptar" />

</RelativeLayout>