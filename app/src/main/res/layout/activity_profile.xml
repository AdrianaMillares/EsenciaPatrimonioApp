<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ep_white">

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Perfil"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <View
        android:id="@+id/lineProfile"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/tvProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="647dp"
        android:background="@color/light_gray" />

    <ImageView
        android:id="@+id/ivFlechaProfile"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_toStartOf="@+id/tvProfile"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="142dp"
        android:layout_height="133dp"
        android:layout_below="@+id/tvProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/ivEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="129dp"
        app:srcCompat="@drawable/ic_baseline_edit_24"/>

    <TextView
        android:id="@+id/tvProfile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfile"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/ep_pink"
        android:textSize="20sp"
        android:text="Nombre de usuario" />

    <View
        android:id="@+id/lineProfile1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/tvProfile1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="375dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tvUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfile1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        android:text="paulinacardoso" />

    <TextView
        android:id="@+id/tvProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfile1"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/ep_pink"
        android:textSize="20sp"
        android:text="Correo" />

    <View
        android:id="@+id/lineProfile2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/tvProfile2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="296dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfile2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        android:text="paulinacardoso11@gmail.com" />

    <Button
        android:id="@+id/button"
        android:layout_width="249dp"
        android:layout_height="58dp"
        android:layout_below="@+id/ivProfile"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="242dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="@color/ep_green"
        android:text="Cambiar contraseÃ±a" />


</RelativeLayout>